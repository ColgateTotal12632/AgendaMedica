@model AgendaMedica.Models.Medico

@{
    ViewData["Title"] = "Criar Médico";
}

<h1 class="text-white">Criar Médico</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label text-white">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CRM" class="control-label text-white">CRM</label>
                <input asp-for="CRM" class="form-control" />
                <span asp-validation-for="CRM" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label text-white">Celular</label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EspecialidadeId" class="control-label text-white">Especialidade</label>
                <select asp-for="EspecialidadeId" class ="form-control" asp-items="ViewBag.EspecialidadeId">
                    <option value="">Selecione uma especialidade</option>
                </select>
            </div>
            <div class="form-group py-2">
                <input type="submit" value="Criar Médico" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a asp-action="Index" class="text-white text-decoration-none bg-secondary py-2 px-2 rounded-2">Voltar para a agenda</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}