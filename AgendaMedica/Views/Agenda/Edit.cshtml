@{
    ViewData["Title"] = "Cadastrar-se";
}

<div class="container-fluid p-0">
    <div class="row min-vh-100 g-0">

        <!-- Coluna Esquerda (Formulário) -->
        <div class="col-md-6 d-flex align-items-center justify-content-center bg-white p-5">
            <div class="w-100" style="max-width: 380px;">
                <h2 class="fw-bold mb-2 text-center text-dark">Crie sua conta</h2>
                <p class="text-center text-muted mb-4">Comece a gerenciar seus agendamentos médicos com facilidade</p>

                <form method="post" asp-action="Cadastro">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-semibold small text-muted">E-mail</label>
                        <input type="email" class="form-control border-secondary-subtle" id="email" name="Email" placeholder="Digite seu e-mail" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label fw-semibold small text-muted">Senha</label>
                        <input type="password" class="form-control border-secondary-subtle" id="password" name="Senha" placeholder="Digite sua senha" required>
                    </div>

                    <div class="mb-4">
                        <label for="confirmPassword" class="form-label fw-semibold small text-muted">Confirmar senha</label>
                        <input type="password" class="form-control border-secondary-subtle" id="confirmPassword" name="ConfirmarSenha" placeholder="Confirme sua senha" required>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 fw-semibold py-2">Cadastrar</button>

                    <p class="text-center mt-3 mb-0 text-muted">
                        Já possui uma conta?
                        <a asp-action="Login" asp-controller="Account" class="text-decoration-none fw-semibold text-primary">Entrar</a>
                    </p>
                </form>

                <div class="text-center my-3 text-muted">ou</div>

                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-dark">
                        <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/google.svg" width="18" class="me-2" />
                        Entrar com Google
                    </button>
                    <button type="button" class="btn btn-outline-dark">
                        <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/facebook.svg" width="18" class="me-2" />
                        Entrar com Facebook
                    </button>
                    <button type="button" class="btn btn-outline-dark">
                        <img src="https://cdn.jsdelivr.net/gh/simple-icons/simple-icons/icons/twitter.svg" width="18" class="me-2" />
                        Entrar com Twitter
                    </button>
                </div>

                <p class="text-center small text-muted mt-3">
                    Ao se cadastrar, você concorda com nossos
                    <a href="#" class="text-decoration-none">Termos de Uso</a> e
                    <a href="#" class="text-decoration-none">Política de Privacidade</a>.
                </p>
            </div>
        </div>

        <!-- Coluna Direita (Imagem) -->
        <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center bg-light">
            <img src="img/Medico-cuidar-da-sua-imagem-e-fundamental.jpg"
                 alt="Cadastro médico"
                 class="img-fluid rounded-end-3"
                 style="object-fit: cover; height: 100vh; width: 100%;">
        </div>
    </div>
</div>
